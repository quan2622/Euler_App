{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",       
    "outDir": "dist-electron",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],                      
    "baseUrl": "./"
  },
  "include": ["src-electron/**/*"]
}

